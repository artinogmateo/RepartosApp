<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Repartos.MenuHamburguesa">
    <MasterDetailPage.Master>
        <ContentPage Title="Menú"
                    BackgroundColor="#5e5a5a"
                    Padding="0,40,0,0">
            
            <Label Text="My menu"/>

            <ListView BackgroundColor="Aquamarine" x:Name="lstMenu" ItemSelected="lstMenu_ItemSelected" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell TextColor="Black" DetailColor="Black" Height="25" 
                                   Text="{Binding MenuTitle}"
                                   Detail="{Binding MenuDetail}">
                        </ImageCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </ContentPage>
    </MasterDetailPage.Master>

    <!--Add below code too-->
    <MasterDetailPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <ContentPage Title="Pagina Maestra"></ContentPage>
            </x:Arguments>
        </NavigationPage>
    </MasterDetailPage.Detail>
</MasterDetailPage>